  <% if(locals.islogin){%>
<div class="panel panel-default" style="padding: 30px  50px;">
<div class="panel-body">
							
				<div class="panel-heading">
					<h3 class="panel-title">用户管理</h3>

				
				</div>
				<form class="col-lg-12 form-horizontal" id="adduser" action="/user" role="form"  method="post">
         
              <div class="form-group col-sm-4" style="margin-left: -40px;" >
                  <label class="col-sm-4 control-label" for="username">用户名</label>
                  <div class="col-sm-8">
                      <input type="text" class="form-control" id="username" name="username"  required>
                 </div>
             </div>
             <div class="form-group col-sm-4" >
                 <label class="col-sm-3 control-label" for="password2">密码</label>
                 <div class="col-sm-9">
                     <input type="text" class="form-control" id="password2" name="password2"  required>
                 </div>
             </div>
             <div class="form-group col-sm-4">
									
									<label class="col-sm-3 control-label">权限</label>
									<div class="col-sm-9">
										<select class="form-control" id="powr"  name="powr">
											<option value="0">一般用户</option>
											<option value="2">VIP用户</option>
											
										</select>
									</div>
								</div>	
             <div class="form-group col-sm-1" style="float: right; margin-right: 24px;">
                 <div class="col-sm-6" >
                     <button type="submit" class="btn btn-warning">添加用户</button>
                 </div>
                
             </div>
</form>
				
			
				<div class="panel-body">
				
					<table class="table table-hover middle-align">
						<thead>
							<tr><th>ID</th>
								<th>用户名</th>
								<th>权限</th>
								<th>操作</th>
								
							</tr>
						</thead>
						<tbody>
						<% for(var i=0; i<users.length; i++) { %>
							<tr id="<%=users[i].ids %>user">
							    <td>
									<%= users[i].ids %>
								</td>
								<td>
									<%=users[i].username %>
								</td>
								<td id="<%=users[i].ids %>userpower">
									<%=users[i].powr %>
								</td>
								<td>
								   <a  class="btn btn-sm btn-blue is-login" onclick="upuser(<%=users[i].ids %>);" >升级权限</a>
									<a  class="btn btn-sm btn-red is-login" onclick="deleteuser(<%=users[i].ids %>);" >删除</a>
								</td>
								

								</tr>
					     <% } %>
						
						</tbody>
					</table>
					
					<hr>
					
					
				</div>
			</div>



			
			<% }else{%>
 <script type="text/javascript">
 	window.open("/login",'_self');
 </script>
 <%}%>